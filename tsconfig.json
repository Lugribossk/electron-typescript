{
    "compilerOptions": {
        "jsx": "react",
        "lib": ["dom", "es5"],
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "outDir": "target/compiler-js",
        "sourceMap": true,
        "strict": true,
        "target": "es5" // "es2015" would be better but breaks Uglify
    },
    "include": [
        "src/**/*.ts",
        "test/**/*.ts",
        "node_modules/@types/**/*.ts"
    ]
}