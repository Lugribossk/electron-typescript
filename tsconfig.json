{
    "compilerOptions": {
        "jsx": "react",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "outDir": "./target/compiler-js",
        "sourceMap": true,
        "strictNullChecks": true,
        "target": "es5" // "es2015" would be better but breaks Uglify
    },
    "include": [
        "src/**/*.ts",
        "test/**/*.ts",
        "node_modules/@types/**/*.ts"
    ]
}